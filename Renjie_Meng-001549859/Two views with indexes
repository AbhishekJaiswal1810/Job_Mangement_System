/*View to display the count of applicants' education level for each state.*/
create index applicants_by_state
on applicant_profile (state, highest_education);

create or replace view edu_by_state as  
select state, count(highest_education) as num_of_edu
from applicant_profile
group by state;

/*View to display the average of applicants' current salary for each city.*/
create index applicants_salary
on applicant_profile (city, current_salary);

create or replace view applicant_salary as
select city, avg(current_salary) as avg_salary
from applicant_profile
group by city;

create index user_2022 
on user_account(EXTRACT(YEAR from registration_date));
